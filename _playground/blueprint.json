{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"preferredVersions": {
		"php": "8.3",
		"wp": "latest"
	},
	"features": {
		"networking": true
	},
	"steps": [
		{
			"step": "login"
		},
		{
			"step": "installTheme",
			"themeZipFile": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/justintadlock/tt4-book-reviews/master/_playground/tt4-book-reviews.zip"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "wp-cli",
			"command": "wp post delete $(wp post list --post_type='post' --format=ids) --force"
		},
		{
			"step": "importWxr",
			"file": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/justintadlock/tt4-book-reviews/master/_playground/site-content.xml"
			}
		}
	]
}
